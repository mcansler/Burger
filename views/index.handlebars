<div class="container">
    <div class="row">
        <div class="col-xs-12 text-center" id="top-bar">
            <h1>EAT DA BURGER!</h1>
        </div>
        <div class="col-xs-6 text-center" class="task">
            <div class="row">
                {{#each burgers}}
                    {{#unless this.devoured}}
            <div class="col-xs-9 text-center" id="eat">
                <pre>{{this.id}}. {{this.burger_name}}</pre>
            </div>
            <div class="col-xs-3 text-center" id="devour">
                <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
                    <input type="hidden" name="burger_id" type="text" value={{this.id}}>
                    <br>
                    <button type="submit" class="btn btn-default">DEVOUR IT!</button>
                </form>
            </div>
            {{/unless}}
            {{/each}}
            </div>
        </div>
        <div class="col-xs-4 text-center" class="task" id="devoured">
            {{#each burgers}}
                {{#if this.devoured}}
                    <input class="form-control field" type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
                {{/if}}
            {{/each}}
        </div>
    </div>
</div>

<div class="container" id="submit">
    <div class="row">
        <div class="col-xs-4"></div>
        <div class="col-xs-4 text-center enter_section">
            <form action="/burgers/create" method="POST">
                <input type="text" name="burger_name" class="form-control"
                value="" id="enter_text">
                <button type="submit" class="btn btn-primary button2"
                id="text-enter-button">SUBMIT</button>
            </form>
            <h3>Enter in a burger you would like to eat!</h3>
        </div>
        <div class="col-xs-4"></div>
    </div>
</div>

